{
  "name": "lawful-typeclasses",
  "version": "0.5.0",
  "description": "Property-based testing library. Inspired by principled type classes.",
  "main": "lib/index.js",
  "files": [
    "lib/*"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "prettier -w .",
    "prepare": "npm run build",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Veigaribo/lawful-typeclasses.git"
  },
  "keywords": [
    "type",
    "class",
    "typeclass",
    "behavior",
    "behaviour",
    "law",
    "lawful",
    "principled",
    "instance"
  ],
  "author": "Gabriel Veiga <veigo@veigo.dev>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3"
  },
  "dependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run build && jest test/readme.test.js"
    }
  },
  "lint-staged": {
    "*.{js,ts,css,md}": "prettier --write",
    "*.{js,ts}": [
      "jest --bail --findRelatedTests"
    ]
  }
}
